<p style="color: green"><%= notice %></p>

<div class="container mx-auto">
  <h1 class="text-2xl font-bold mb-4">Products</h1>

  <div id="products" class="flex flex-wrap">
    <% @products.each do |product| %>
      <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 p-4">
        <a href="<%= product_path(product) %>" class="group relative block h-64 sm:h-80 lg:h-96">
          <div class="absolute inset-0 transition-opacity opacity-0 group-hover:opacity-100">
            <%#= image_tag(product.image_url, alt: product.name, class: "object-cover w-full h-full") %>
          </div>

          <span class="absolute inset-0 border-2 border-dashed border-black"></span>

          <!-- Card content -->
          <div class="relative flex h-full transform items-end border-2 border-black bg-white transition-transform group-hover:-translate-x-2 group-hover:-translate-y-2">
            <!-- Details to show always -->
            <div class="p-4 !pt-0 transition-opacity group-hover:absolute group-hover:opacity-0 sm:p-6 lg:p-8">
              <h2 class="mt-4 text-xl font-medium sm:text-2xl"><%= product.name %></h2>
              <h6 class="text-sm sm:text-base text-muted"><%= product.type_of_product.name %></h6>
            </div>

            <!-- Details to show on hover -->
            <div class="absolute p-4 custom-opacity transition-opacity group-hover:relative group-hover:opacity-100 sm:p-6 lg:p-8">
              <p class="mt-4 text-sm sm:text-base text-black">
                <% if product.photo_url.present? %>
                  <%= image_tag(product.photo_url, alt: product.name, class: " w-full h-full") %>
                <% else %>
                  <p>Image not available</p>
                <% end %>
              </p>
              <p class="mt-8 font-bold text-black">Read more</p>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>

  <h3 class="text-lg mt-6">Don't see a product you love?</h3>
  <%= link_to "Let us know!", new_product_path, class: "btn btn-primary" %>
</div>
