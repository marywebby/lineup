<p style="color: green"><%= notice %></p>

<div class="container text-center mt-8 mb-8 mx-auto">
  <h1 class="text-2xl font-bold mb-4">Products</h1>

  <div id="products" class="flex flex-wrap">
    <% @products.each do |product| %>
      <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 p-4">
        <a href="#" class="group relative block h-64 sm:h-80 lg:h-96">
          <span class="absolute inset-0 border-2 border-dashed border-black"></span>

          <div class="relative flex h-full transform items-end border-2 border-black bg-white transition-transform group-hover:-translate-x-2 group-hover:-translate-y-2">
            <div class="p-4 !pt-0 transition-opacity group-hover:absolute group-hover:opacity-0 sm:p-6 lg:p-8">
            </div>

            <div class="absolute p-4 opacity-100 transition-opacity group-hover:relative group-hover:opacity-100 sm:p-6 lg:p-8">
              <p class="mt-4 text-sm sm:text-base text-black">
                <% if product.photo_url.present? %>
                  <%= image_tag(product.photo_url, alt: product.name, class: " w-full h-full") %>
                <% else %>
                  <p>Image not available</p>
                <% end %>
              </p>
              <div class="mt-2 text-sm font-medium sm:text-xl"><%= product.name %></div>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>

  <h3 class="text-lg mt-6 mb-3">Don't see a product you love?</h3>
  <%= link_to "Let us know!", new_product_path, class: "btn btn-primary" %>
</div>
