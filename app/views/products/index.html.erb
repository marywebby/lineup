<p style="color: green"><%= notice %></p>

<div class="container text-center mt-8 mb-8 mx-auto">
  <p style="color: green"><%= notice %></p>

  <div class="container text-center mt-8 mb-8 mx-auto">
    <h1 class="text-2xl font-bold mb-4">Products</h1>

    <%= search_form_for @q do |f| %>
      <div class="m-2">
        <%= f.label :name_cont, "Search for specific products" %>
        <%= f.text_field :name_cont, placeholder: "Search product..." %>
      </div>

      <%= f.submit "Search", class: "btn btn-primary btn-block" %>
    <% end %>
  </div>
  <div id="products" class="flex flex-wrap">
    <% @products.each do |product| %>
      <div class="w-full p-4 sm:w-1/2 md:w-1/3 lg:w-1/4">
        <a href="<%= product_path(product) %>" class="group relative block">
          <div class="aspect-w-1 aspect-h-1 w-full overflow-hidden rounded-lg bg-gray-200">
            <% if product.photo_url.present? %>
              <%= image_tag(product.photo_url, alt: product.name, class: "w-full h-auto object-center object-cover") %>
            <% else %>
              <p class="text-center">Image not available</p>
            <% end %>
          </div>
          <div class="mt-2 text-sm font-medium sm:text-sm"><%= product.name %></div>
        </a>
      </div>
    <% end %>
  </div>

  <h3 class="text-lg mt-6 mb-3">Don't see a product you love?</h3>
  <%= link_to "Let us know!", new_product_path, class: "inline-flex justify-center rounded-md border border-transparent px-4 py-2 text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out" %>
</div>
