<div class="mt-4 mb-4">
  <div class="max-w-md mx-auto">
    <h1 class="text-2xl font-bold mb-4">Edit: <%= @routine.name %></h1>

    <%= form_with(model: @routine, local: true, class: "space-y-4") do |form| %>
      <%= form.hidden_field :user_id, value: current_user.id %>

      <div>
        <%= form.label :name, class: "block font-medium text-sm text-gray-700" %>
        <%= form.text_field :name, class: "form-input mt-1 block w-full rounded-md border-gray-300 shadow-sm"%>
      </div>

      <div class="flex justify-center m-4">
        <%= form.submit "Save Changes", class: "inline-flex justify-center rounded-md border border-transparent px-4 py-2 text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out" %>
        <%= link_to "Cancel", @routine, class: "inline-flex justify-center rounded-md border border-transparent px-4 py-2 text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out" %>
      </div>
    <% end %>

    <div class="card-actions justify-center mt-4">
      <%= link_to "Back to routines", routines_path, class: "inline-flex justify-center rounded-md border border-transparent px-4 py-2 text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out ml-2" %>
      <%= button_to "Destroy this routine", @routine, method: :delete, form: {class: "inline"}, class: "inline-flex justify-center rounded-md border border-transparent px-4 py-2 text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out ml-2" %>
    </div>
  </div>
</div>
