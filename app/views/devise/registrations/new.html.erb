<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-4">Sign up</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "devise-form" }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="form-group mb-3">
            <%= f.label :email, "Email" %>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        label: false,
                        input_html: { class: "form-control", autocomplete: "email", placeholder: "Email Address" } %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :password, "Password" %>
            <%= f.input :password,
                        required: true,
                        label: false,
                        input_html: { class: "form-control", autocomplete: "new-password", placeholder: "Password" } %>
            <small class="form-text text-muted">6 characters minimum</small>
          </div>
          <div class="form-group mb-3">
            <%= f.label :password_confirmation, "Confirm Password" %>
            <%= f.input :password_confirmation,
                        required: true,
                        label: false,
                        input_html: { class: "form-control", autocomplete: "new-password", placeholder: "Confirm Password" } %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
