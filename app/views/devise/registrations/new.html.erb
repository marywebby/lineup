<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-lg mx-auto px-10 py-8 bg-white shadow-xl rounded-lg">
    <div class="w-full" style="max-width: 768px; margin: auto;">
      <h2 class="mb-6 text-3xl font-bold text-center">Sign up</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "devise-form" }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="mb-4">
            <%= f.label :email, "Email", class: "block text-lg font-bold mb-2" %>
            <%= f.email_field :email,
                        required: true,
                        autofocus: true,
                        class: "input input-bordered w-full text-white",
                        autocomplete: "email",
                        placeholder: "Email Address" %>
          </div>
          <div class="mb-4">
            <%= f.label :password, "Password", class: "block text-lg font-bold mb-2" %>
            <%= f.password_field :password,
                        required: true,
                        class: "input input-bordered w-full text-white",
                        autocomplete: "new-password",
                        placeholder: "Password" %>
            <p class="text-sm text-gray-600 mt-1">6 characters minimum</p>
          </div>
          <div class="mb-4">
            <%= f.label :password_confirmation, "Confirm Password", class: "block text-lg font-bold mb-2" %>
            <%= f.password_field :password_confirmation,
                        required: true,
                        class: "input input-bordered w-full text-white",
                        autocomplete: "new-password",
                        placeholder: "Confirm Password" %>
          </div>
        </div>

        <div class="flex items-center justify-between mt-6">
          <%= f.submit "Sign up", class: "btn btn-primary flex-grow mr-2" %>
          <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-outline btn-primary flex-grow" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
