<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-4">Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "devise-form" }) do |f| %>
        <div class="form-group mb-3">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { class: "form-control", placeholder: "example@email.com", autocomplete: "email" } %>
        </div>
        <div class="form-group mb-3">
          <%= f.input :password,
                      required: false,
                      input_html: { class: "form-control", placeholder: "Password", autocomplete: "current-password" } %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-group form-check mb-3">
            <%= f.input :remember_me, as: :boolean, label: "Remember me", wrapper_html: { class: "form-check-label" } %>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.button :submit, "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
