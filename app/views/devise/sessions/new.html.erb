<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-lg mx-auto px-10 py-8 bg-white shadow-xl rounded-lg">
    <h2 class="mb-6 text-3xl font-bold text-center">Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "devise-form" }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <div class="mb-4">
          <%= f.label :email, "Email", class: "block text-lg font-bold mb-2" %>
          <%= f.email_field :email,
                      required: false,
                      autofocus: true,
                      class: "input input-bordered w-full text-white",
                      placeholder: "example@email.com",
                      autocomplete: "email" %>
        </div>
        <div class="mb-4">
          <%= f.label :password, "Password", class: "block text-lg font-bold mb-2" %>
          <%= f.password_field :password,
                      required: false,
                      class: "input input-bordered w-full text-white",
                      placeholder: "Password",
                      autocomplete: "current-password" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-4">
            <%= f.check_box :remember_me, class: "form-check-input text-white" %>
            <%= f.label :remember_me, class: "form-check-label inline-block text-gray-800" %>
          </div>
        <% end %>
      </div>

      <div class="flex items-center justify-between mt-6">
        <%= f.submit "Log in", class: "btn btn-primary flex-grow mr-2" %>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-outline btn-primary flex-grow" %>
      </div>

      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
